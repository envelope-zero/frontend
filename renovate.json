{
  "extends": ["group:monorepos", "group:recommended"],
  "dependencyDashboard": true,
  "platformAutomerge": true,
  "pre-commit": {
    "enabled": true
  },
  "labels": ["renovate"],
  "rangeStrategy": "pin",
  "rebaseWhen": "behind-base-branch",
  "semanticCommits": "enabled",
  "packageRules": [
    {
      "matchManagers": ["npm", "github-actions", "pre-commit"],
      "matchUpdateTypes": ["minor", "patch"],
      "automerge": true
    },
    {
      "matchManagers": ["github-actions"],
      "matchPackageNames": ["ghcr.io/envelope-zero/backend"],
      "matchUpdateTypes": ["minor", "patch"],
      "automerge": true
    }
  ],
  "regexManagers": [
    {
      "description": "Upgrade node version in a GitHub workflow",
      "fileMatch": ["(^workflow-templates|\\.github/workflows)/[^/]+\\.ya?ml$"],
      "matchStrings": ["node-version:\\s*'(?<currentValue>.*)'"],
      "datasourceTemplate": "node",
      "depNameTemplate": "node"
    }
  ]
}
